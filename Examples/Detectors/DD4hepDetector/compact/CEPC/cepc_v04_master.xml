  <detectors>
    <detector id="0" name="BeamPipe" type="cepc_beampipe" vis="red">
      <beampipe/>
      <tubs name="BeamPipeCylinder" rmin="14.0*mm" rmax="14.5*mm" dz="120.0*mm" material="Beryllium">
	  <layer_material surface="representing" binning="binPhi,binZ" bins0="25" bins1="25"/>
